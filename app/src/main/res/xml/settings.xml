<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_auth">
        <EditTextPreference
            app:key="Name"
            app:title="@string/settings_name"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/settings_connection">
        <EditTextPreference
            app:key="IP"
            app:title="@string/settings_IP"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>